<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/img_mine_Blur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="visible"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_mine_photo"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/avatar_icon"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="0.4dp"
                />
                <TextView
                    android:id="@+id/tv_mine_login_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/img_mine_photo"
                    android:text="点击登录"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="invisible"/>
                <LinearLayout
                    android:id="@+id/ll_mine_nameAndLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/img_mine_photo"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_mine_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/tv_mine_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="签名 >"
                        android:textSize="14sp"
                    />
                </LinearLayout>


                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="@color/white"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">
                    <LinearLayout
                        android:id="@+id/ll_mine_setting"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView android:layout_width="24dp"
                                   android:layout_height="24dp"
                                   android:src="@mipmap/setting_icon"/>
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.hxnidc.qiu_ly.widget.WaveView3
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_mine_favorite"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.sackcentury.shinebuttonlib.ShineButton
                            android:id="@+id/po_image0"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerInParent="true"
                            android:elevation="10dp"
                            app:btn_color="@android:color/white"
                            app:btn_fill_color="#f26d7d"
                            app:siShape="@raw/heart"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="收藏"
                            android:textColor="@android:color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_toolbar_color"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_mine_backdrop"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/backdrop_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="(*)夜间模式"
                            android:textColor="@android:color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img_mine_concern"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/star_icon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="关注(*)"
                            android:textColor="@android:color/white"/>

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_mine_decals"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:drawableRight="@drawable/icon_right"
                          android:gravity="center_vertical"
                          android:paddingLeft="8dp"
                          android:paddingRight="4dp"
                          android:text="我的贴纸"
                          android:textColor="@android:color/black"
                          android:textSize="15sp"
                />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_gap_size"
                android:background="@color/colorLine"/>
            <LinearLayout
                android:id="@+id/ll_mine_comment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:drawableRight="@drawable/icon_right"
                          android:gravity="center_vertical"
                          android:paddingLeft="8dp"
                          android:paddingRight="4dp"
                          android:text="我的评论"
                          android:textColor="@android:color/black"
                          android:textSize="15sp"
                />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_gap_size"
                android:background="@color/colorLine"/>
            <LinearLayout
                android:id="@+id/ll_mine_label"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">
                <TextView android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:drawableRight="@drawable/icon_right"
                          android:gravity="center_vertical"
                          android:paddingLeft="8dp"
                          android:paddingRight="4dp"
                          android:text="我的标签"
                          android:textColor="@android:color/black"
                          android:textSize="15sp"
                />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_gap_size"
                android:background="@color/colorLine"/>

            <LinearLayout
                android:id="@+id/ll_mine_adGame"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp">
                <TextView android:id="@+id/textView2"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:drawableRight="@drawable/icon_right"
                          android:gravity="center_vertical"
                          android:paddingLeft="8dp"
                          android:paddingRight="4dp"
                          android:text="游戏"
                          android:textColor="@android:color/black"
                          android:textSize="15sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_gap_size"
                android:background="@color/colorLine"/>
            <LinearLayout
                android:id="@+id/ll_mine_about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
            >
                <TextView android:id="@+id/textView"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:drawableRight="@drawable/icon_right"
                          android:gravity="center_vertical"
                          android:paddingLeft="8dp"
                          android:paddingRight="4dp"
                          android:text="关于我们"
                          android:textColor="@android:color/black"
                          android:textSize="15sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_gap_size"
                android:background="@color/colorLine"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>