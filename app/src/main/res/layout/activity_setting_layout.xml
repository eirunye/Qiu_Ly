<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/setting_string"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <!--自定义控件-->
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/et_login_name"
            android:gravity="center"
            android:maxLines="1"
            android:text="用户名:"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_login_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:hint="请输入用户名"
            android:maxLines="1"
            android:textColor="#6e6e6e"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/et_login_name"
            android:gravity="center"
            android:maxLines="1"
            android:text="手机号:"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_setting_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:hint="请输入手机号码"
            android:maxLines="1"
            android:textColor="#6e6e6e"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/et_login_name"
            android:gravity="center"
            android:maxLines="1"
            android:text="验证码:"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_sure_setting_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:maxLines="1"
            android:textColor="#6e6e6e"/>

        <TextView
            android:id="@+id/tv_register_authCode"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorGrayF5"
            android:gravity="center"
            android:text="获取验证码"
            android:textSize="16sp"
        />
    </LinearLayout>

</LinearLayout>